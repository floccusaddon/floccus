{
  "manifest_version": 2,
  "name": "Floccus (nextcloud Sync)",
  "short_name": "Floccus",
  "version": "1.3.4",
  "description": "Sync your browser with nextcloud (currently only bookmarks; more to come)",
  "icons": {
    "48": "icons/logo.png"
  },

  "applications": {
    "gecko": {
      "id": "floccus@handmadeideas.org",
      "strict_min_version": "48.0"
    }
  },

 "permissions": [
    "https://*/*"
  , "alarms"
  , "bookmarks"
  , "storage"
  ],

  "options_ui": {
    "page": "dist/html/options.html"
  },

	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"48": "icons/logo.png"
		},
		"default_title": "Open Floccus options",
		"default_popup": "dist/html/options.html"
	},

  "background": {
    "page": "dist/html/background.html"
  }
}
